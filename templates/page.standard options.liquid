<style>
  .chicken-coop-grid {
    /* Turn on CSS Grid */
    display: grid;
    /* 4 columns on larger screens */
    grid-template-columns: repeat(4, 1fr);
    /* Gap between items */
    gap: 20px;
    /* Center text under images */
    text-align: center;
    /* Limit max width and center the whole block */
    max-width: 1200px;
    margin: 0 auto;
  }
  
  /* Make each item block-based */
  .chicken-coop-grid .grid-item {
    background: none; /* optional */
  }

  /* Make images responsive */
  .chicken-coop-grid img {
    width: 100%;
    height: auto;
  }

  /* 3 columns on tablets (under 992px) */
  @media (max-width: 992px) {
    .chicken-coop-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  /* 2 columns on smaller tablets/large phones (under 768px) */
  @media (max-width: 768px) {
    .chicken-coop-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  /* 1 column on small phones (under 480px) */
  @media (max-width: 480px) {
    .chicken-coop-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<!-- This will display the content you add in the Pages section -->
<div class="page-width">
  {{ page.content }}
</div>
