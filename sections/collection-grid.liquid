{% comment %}
  Section: collection-grid.liquid
  This standalone section displays products from a selected collection in a grid layout.
  It can be added to any page without requiring a special template.
{% endcomment %}

{%- liquid
  assign collection_handle = section.settings.collection | default: "all"
  assign collection = collections[collection_handle]
  assign grid_classes = "grid grid--3-col-desktop grid--2-col-tablet grid--1-col-mobile"
-%}

<div class="page-width" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
  {% if section.settings.title != blank %}
    <div class="section-header text-center">
      <h2>{{ section.settings.title | escape }}</h2>
    </div>
  {% endif %}
  
  <div class="collection-grid">
    {% if collection.products.size > 0 %}
      <div class="{{ grid_classes }}">
        {% for product in collection.products %}
          <div class="grid__item">
            <div class="card-wrapper">
              <a href="{{ product.url }}" class="product-card-link">
                <div class="card product-card">
                  <div class="card__media">
                    <div class="image-container">
                      {% if product.featured_image != blank %}
                        <img
                          srcset="
                            {{ product.featured_image | img_url: '300x300', crop: 'center' }} 300w,
                            {{ product.featured_image | img_url: '600x600', crop: 'center' }} 600w,
                            {{ product.featured_image | img_url: '900x900', crop: 'center' }} 900w
                          "
                          src="{{ product.featured_image | img_url: '600x600', crop: 'center' }}"
                          sizes="(min-width: 1200px) 33vw, (min-width: 750px) 50vw, 100vw"
                          alt="{{ product.featured_image.alt | escape }}"
                          loading="lazy"
                          class="product-card__image"
                        >
                      {% else %}
                        {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                      {% endif %}
                    </div>
                  </div>
                  <div class="card__content product-card__content">
                    <h2 class="product-card__title">{{ product.title }}</h2>
                    {% if section.settings.show_price %}
                      <div class="product-card__price">
                        {% if product.price_varies %}
                          <span class="price-item price-item--sale">{{ product.price_min | money }} - {{ product.price_max | money }}</span>
                        {% else %}
                          <span class="price-item price-item--sale">{{ product.price | money }}</span>
                        {% endif %}
                      </div>
                    {% endif %}
                  </div>
                </div>
              </a>
            </div>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <div class="empty-collection">
        <p>No products found in this collection.</p>
      </div>
    {% endif %}
  </div>
</div>

<style>
  .collection-grid {
    margin-top: 2rem;
    margin-bottom: 2rem;
  }
  
  .product-card {
    height: 100%;
    display: flex;
    flex-direction: column;
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.3s ease;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
  }
  
  .product-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
  }
  
  .image-container {
    position: relative;
    width: 100%;
    padding-bottom: 100%; /* Creates a 1:1 aspect ratio */
    overflow: hidden;
  }
  
  .product-card__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover; /* This ensures the image covers the container while maintaining aspect ratio */
  }
  
  .product-card__content {
    padding: 1rem;
    background-color: #fff;
    text-align: center;
  }
  
  .product-card__title {
    font-size: 1.2rem;
    margin: 0;
    font-weight: 500;
    color: #333;
    line-height: 1.3;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }
  
  .product-card__price {
    margin-top: 0.5rem;
    font-weight: 500;
  }
  
  .grid {
    display: grid;
    gap: 30px;
  }
  
  .grid--3-col-desktop {
    grid-template-columns: repeat(3, 1fr);
  }
  
  @media screen and (max-width: 990px) {
    .grid--2-col-tablet {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media screen and (max-width: 749px) {
    .grid--1-col-mobile {
      grid-template-columns: 1fr;
    }
  }
</style>

{% schema %}
{
  "name": "Collection Grid",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Featured Products"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection to display"
    },
    {
      "type": "checkbox",
      "id": "show_price",
      "label": "Show product prices",
      "default": false
    },
    {
      "type": "header",
      "content": "Layout Settings"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Collection Grid",
      "category": "Collection"
    }
  ]
}
{% endschema %}